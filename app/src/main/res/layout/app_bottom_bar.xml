<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <!-- BottomAppBar con colores personalizados -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/my_botton_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#6200EE"
        android:backgroundTint="@color/white"

        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="50dp"
        app:fabCradleVerticalOffset="10dp">

        <!-- BottomNavigationView personalizado -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/my_botton_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:background="@drawable/bottom_nav_background"
            android:elevation="12dp"
            app:itemIconSize="28dp"
            app:itemIconTint="@color/bottom_nav_icon_tint"
            app:itemTextColor="@color/bottom_nav_text_color"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/menu_botton" />
    </com.google.android.material.bottomappbar.BottomAppBar>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
