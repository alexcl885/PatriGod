<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home">
    <fragment
        android:id="@+id/fragmentoCardview"
        android:name="com.example.patrigod.FragmentoCardview"
        android:label="monumentos"
        tools:layout="@layout/fragmento_cardview" >
        <action
            android:id="@+id/action_fragmentoCardview_to_detallesFragment"
            app:destination="@id/detallesFragment">
            <argument
                android:name="idItem"
                app:argType="integer"
                app:nullable="false" />
        </action>
    </fragment>
    <activity
        android:id="@+id/login"
        android:name="com.example.patrigod.Login"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.patrigod.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <activity
        android:id="@+id/registro"
        android:name="com.example.patrigod.Registro"
        android:label="activity_registro"
        tools:layout="@layout/activity_registro" />
    <fragment
        android:id="@+id/configuracion"
        android:name="com.example.patrigod.Configuracion"
        android:label="configuracion"
        tools:layout="@layout/fragmento_configuracion" />
    <fragment
        android:id="@+id/home"
        android:name="com.example.patrigod.Home"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/detallesFragment"
        android:name="com.example.patrigod.DetallesFragment"
        android:label="fragment_detalles"
        tools:layout="@layout/fragment_detalles" />
</navigation>